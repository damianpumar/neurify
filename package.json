{
  "name": "adaptive",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "pnpm -r --parallel clean",
    "clean:core": "pnpm --filter @adaptive-ui/core clean",
    "clean:server": "pnpm --filter @adaptive-ui/server clean",
    "clean:client": "pnpm --filter @adaptive-ui/client clean",
    "clean:components": "pnpm --filter @adaptive-ui/components clean",
    "prebuild": "pnpm clean",
    "build": "pnpm -r --filter '@adaptive-ui/*' build",
    "build:core": "pnpm --filter @adaptive-ui/core build",
    "build:server": "pnpm --filter @adaptive-ui/server build",
    "build:client": "pnpm --filter @adaptive-ui/client build",
    "build:components": "pnpm --filter @adaptive-ui/components build",
    "dev": "pnpm -r --parallel --filter '@adaptive-ui/core' --filter '@adaptive-ui/server' --filter '@adaptive-ui/client' dev",
    "dev:core": "pnpm --filter @adaptive-ui/core dev",
    "dev:server": "pnpm --filter @adaptive-ui/server dev",
    "dev:client": "pnpm --filter @adaptive-ui/client dev",
    "dev:all": "pnpm -r --parallel --filter '@adaptive-ui/core' --filter '@adaptive-ui/server' --filter '@adaptive-ui/client' --filter 'playground' --filter 'demo-react' --filter 'demo-vue' dev",
    "dev:playground": "pnpm -r --parallel --filter '@adaptive-ui/core' --filter '@adaptive-ui/server' --filter '@adaptive-ui/client' --filter 'playground' dev",
    "dev:demo-react": "pnpm -r --parallel --filter '@adaptive-ui/core' --filter '@adaptive-ui/server' --filter '@adaptive-ui/client' --filter 'demo-react' dev",
    "dev:demo-vue": "pnpm -r --parallel --filter '@adaptive-ui/core' --filter '@adaptive-ui/server' --filter '@adaptive-ui/client' --filter 'demo-vue' dev"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

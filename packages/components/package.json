{
  "name": "@adaptive-ui/components",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue.es.js",
      "require": "./dist/vue.cjs.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react.es.js",
      "require": "./dist/react.cjs.js"
    },
    "./svelte": {
      "svelte": "./dist/svelte/index.js",
      "types": "./dist/svelte/index.d.ts",
      "import": "./dist/svelte/index.es.js",
      "require": "./dist/svelte/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm build:react && pnpm build:vue && pnpm build:svelte",
    "build:react": "vite build --config vite.config.react.ts",
    "build:vue": "vite build --config vite.config.vue.ts",
    "build:svelte": "vite build --config vite.config.svelte.ts",
    "dev": "tsc -w",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "svelte": "^5.43.8",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "svelte": {
      "optional": true
    }
  },
  "dependencies": {
    "@adaptive-ui/client": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^20.1.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "react": "^18.2.0",
    "svelte": "^5.43.8",
    "svelte2tsx": "^0.7.45",
    "typescript": "^5.0.2",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^3.9.1",
    "vue": "^3.4.0"
  }
}
